*{margin:0;padding:0;border:0;}
body {font-family: arial, ו, serif;
     font-size:12px;
}
#nav {line-height: 24px;
      list-style-type: none;
      background:#DE2429;
      width: 100%;
}
#nav a {display: block;
        width:100px;
        text-align:center;
}
#nav a:link {color:#EFEFEF;
             text-decoration: none
}
#nav a:visited {color:#EFEFEF;
                text-decoration: none
}
#nav a:hover {color:#EFEFEF;
              text-decoration: underline
}
#nav li {float: left;
         width:100px;
         background:#DE2429;
         font-weight:bold
}
#nav li a:hover{background:#DE2429;
                text-decoration: underline;
                text-align:center;
}
#nav li ul {line-height: 25px;
            list-style-type: none;
            text-align:center;
            width:100px;
            left: -999em;
            position: absolute;            
}
#nav li ul a{display: block;             
             text-align:center;
             padding-left:0px;
             font-weight:normal;
}
#nav li ul a:link {color:#000000;
                   text-decoration:none;
}
#nav li ul a:visited {color:#000000;
                      text-decoration:none;
}
#nav li ul a:hover {color:#000000;
                    text-decoration:none;
                    font-weight:normal;
                    background:#FF3333;
}
#nav li:hover ul {left: auto;}
#nav li ul li{float: left;
              width:100px;
              background: #EFEFEF;
}
#nav li.sfhover ul { left: auto;}