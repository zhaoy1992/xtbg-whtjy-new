	<script>
		var ids = 1;
		$(function(){ //DOM Ready
			Cufon.replace('a, h1').CSS.ready(function() {
				$(".gridster ul").gridster({
					widget_margins: [0.5, 0.5],
					widget_base_dimensions: [40, 40],
					avoid_overlapped_widgets: true//,
					//collision:{on_overlap_stop: function(collider_data){ }}
					});
			
			});
		
			
		});
		
		function add(){
			 $(".gridster ul").gridster().data('gridster').add_widget("<li id='liid"+ids+"' ondblclick='setParm(this)'>标     题：<input type='text'  value = '测试'/></li>",1,8);
			 ids++;
		}
		
		function setParm(tag){
			 $(".gridster ul").gridster().data('gridster').resize_widget( $(tag), 8,1 );
		}
		
		function get(){
			alert($(".gridster ul").html())
			var data = $(".gridster ul").gridster().data('gridster').serialize();
			$(".gridster ul li").each(function(){
			
			});
			
		}
	</script>
	<link rel="stylesheet" type="text/css" href="css/jquery.gridster.min.css">
	<style>
		body{
			font-family: Helvetica, arial, sans-serif;
			margin:150px auto;
			color: #fff;
			font-size: 12px;
			width:940px;
			text-align:center;
		}
		
		ul{	
			background:green;
			list-style:none;
			border: solid 1px green;
		}
		
		li{	
			background:white;
			border-collapse:collapse;
			color: black;
			text-align: left;
			line-height: 100%;
			font: normal;
		}
		
		
	</style>

</head>
<body>
	
