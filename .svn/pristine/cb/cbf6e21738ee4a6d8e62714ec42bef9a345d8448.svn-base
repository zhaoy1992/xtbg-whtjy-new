COMMENT ON TABLE "OA_INSPECT_RESPONSE" IS
'督查督办任务反馈表';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE"."RESPONSE_ID" IS
'接收主键';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE".RECEPT_ID IS
'信息主键';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE"."RESPONSE_CONTENT" IS
'反馈内容';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE"."RESPONSE_USERID" IS
'反馈人id';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE"."RESPONSE_USERNAME" IS
'反馈人姓名';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE".ORG_ID IS
'接收单位id';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE".ORG_NAME IS
'接收单位名称';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE"."RESPONSE_STATE" IS
'阅读状态(0:未读,1:已读)';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE"."RESPONSE_TIME" IS
'反馈时间';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE"."TYPE" IS
'类别(0:反馈信息，1：退回重办信息)';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE"."INFO_ID" IS
'任务id';

COMMENT ON COLUMN "OA_INSPECT_RESPONSE"."ATTACH_ID" IS
'附件id';

