/*==============================================================*/
/* Table: "OA_INSPECT_RESPONSE"                                 */
/*==============================================================*/
CREATE TABLE "OA_INSPECT_RESPONSE" 
(
   "RESPONSE_ID"        VARCHAR2(50)         NOT NULL,
   RECEPT_ID            VARCHAR2(50),
   "RESPONSE_CONTENT"   CLOB,
   "RESPONSE_USERID"    VARCHAR2(50),
   "RESPONSE_USERNAME"  VARCHAR2(50),
   ORG_ID               VARCHAR2(50),
   ORG_NAME             VARCHAR2(200),
   "RESPONSE_STATE"     VARCHAR2(10),
   "RESPONSE_TIME"      DATE,
   "TYPE"               VARCHAR2(10),
   "INFO_ID"            VARCHAR2(50),
   "ATTACH_ID"          VARCHAR2(50),
   CONSTRAINT PK_OA_INSPECT_RESPONSE PRIMARY KEY ("RESPONSE_ID")
