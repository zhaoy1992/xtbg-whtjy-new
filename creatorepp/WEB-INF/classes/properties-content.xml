<?xml version="1.0" encoding='gb2312'?>
<properties>
	<!--************************************************************************************
		内容管理系统相关的配置信息开始
	****************************************************************************************-->
	<property name="cms.driverconfig" value="com.chinacreator.cms.driver.config.impl.DriverConfigurationImpl"/>
	
	<!--
		所有站点的根路径
	-->
	<property name="website.root.path" value="/siteResource"/>
	
	<!--本地发布的目的地，用户可以根据自己的需要进行配置,注释调采用系统缺省的发布路径-->
	<!--<property name="website.publish.path" value="d:/sitepublish"/>-->
	
	
	
	<!--
		发布临时目录，用户可以根据自己的需要进行配置
	-->
	<property name="website.publish.temp.path" value="d:/sitepulishtemp"/>
	
	<!--
		站点内容附件存放的路径
	-->
	<property name="website.project.root.path" value="/${site}/_webprj"/>
	
	<!--
		预览文件存放的路径
	-->
	<property name="website.render.root.path" value="/${site}/_webrender"/>
	
	<!--
		站点模版文件存放的路径
	-->
	<property name="website.template.root.path" value="/${site}/_template"/>
	
	<!--
		站点模版文件存放的路径
	-->
	<property name="website.images.root.path" value="/${site}/images"/>
	
	<!--
		站点模版文件存放的路径
	-->
	<property name="website.style.root.path" value="/${site}/style"/>
	
	
	
	<!--web应用中的cms上下文-->
	<property name="cms.context.path" value="/cms"/>
	
	<!--邮件服务器相关配置-->
	<property name="cms.smtpServer" value="172.16.168.253" />
	<property name="cms.mail_sender" value="liangbing.tao@chinacreator.com" />
	<property name="cms.mail_senderName" value="liangbing.tao" />
          
          <!--用户排序方式 -->
          <property name="cms.userOrder.orderMethod" value="same_job_user_sn" />
          
          <!--机构排序字段 缺省orgnumber -->
          <!--2007.12.22 ge.tao -->
          <property name="sys.orgOrder.column" value="org_sn" />
          
          <!-- 开通/关闭文档评论控制开关 默认开通为“true”-->
          <property name="cms.document.comments" value="true" />
          
          <property name="cms.indexs.switch" value="true" />
	<!-- 
		全文检索引擎类型：					
			LUCENE
			HAILIANG
	-->
          <property name="cms.indexs.engine.type" value="LUCENE" />
          
          <!-- new图片显示时间天数 -->
          <property name="cms.document.newDocInterval" value="30" />
          
          <!-- 
          	如果配置的全文检索类型为海量的全文检索时，需要指定存放内容管理中发布出来的文档页面的存放路径
          	以便海量检索引擎建立文档的索引
           -->
          <property name="cms.indexs.hailiang.rootpath" value="d:/hailiang/datas" />
	
	<!-- 全文检索索引库相对路径 -->
	<property name="cms.index.root.path" value="/WEB-INF/search/" />
	
	<!-- 控制频道文档列表只显示当前用户采集文档列表 -->
	<property name="cms.channel.doclist.onlycurrentuser" value="true" />
	
	
	
	<!--************************************************************************************
		内容管理系统相关的配置信息结束
	****************************************************************************************-->
</properties>